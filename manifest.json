{
  "manifest_version": 3,
  "name": "YouTube Playlist Search",
  "version": "1.0",
  "description": "Adds search functionality to YouTube playlist selector",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [{
    "matches": ["*://*.youtube.com/*"],
    "js": ["content.js"],
    "run_at": "document_end"
  }],
  "web_accessible_resources": [{
    "resources": ["styles.css"],
    "matches": ["*://*.youtube.com/*"]
  }]
}